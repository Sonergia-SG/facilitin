{
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "SyntheticInputEvent": true,
    "SyntheticEvent": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": ["flowtype"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "react/destructuring-assignment": [
      1,
      "always",
      { "ignoreClassFields": true }
    ],
    "linebreak-style": [1, "windows"]
  }
}
